<Project>
    <PropertyGroup>

        <BashLauncherText>
#/bin/bash
pushd `dirname $0` > /dev/null
    this_dir=`pwd`
popd > /dev/null
dotnet $this_dir/$(ProjectName).dll "${@/#prefix:/}"
        </BashLauncherText>

        <DosLauncherText>
@echo off
dotnet %~dp0\$(ProjectName).dll %*
        </DosLauncherText>

    </PropertyGroup>

</Project>
